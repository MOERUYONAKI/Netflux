{% extends 'Layout/base.html.twig' %}

{% block body %}
    <div data-bs-theme="light">
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="">
                    <b>Netflux</b>
                </a>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-danger" type="submit">Search</button>
                </form>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("registration") }}">Inscription</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("connexion") }}">Connexion</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="container-fluid bg-body pt-5 pb-4 mx-0">
            <div class="container d-flex flex-row justify-content-center flex-wrap text-center">
                {% for film in films %}
                    <div class="card mx-4 mb-5 hover-shadow" style="width: 15rem;">
                        <img src="{{ asset(film.imagePath) }}" class="card-img-top" alt="{{ film.title }}">
                        <div class="card-footer">
                            <a href="{{ path("watch", {'id': film.id}) }}">
                                <button type="button" class="btn btn-outline-danger" style="width: 12rem;">Regarder</button>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock body %}